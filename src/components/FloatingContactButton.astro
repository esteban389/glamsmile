---
// Floating Instagram Contact Button
---

<div class="floating-contact">
	<a
		href="https://instagram.com/glam_smile"
		target="_blank"
		rel="noopener noreferrer"
		class="contact-button"
		aria-label="Agendar cita por Instagram (abre en nueva pestaña)"
	>
		<div class="button-content">
			<svg
				class="instagram-icon"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
			>
				<rect
					x="2"
					y="2"
					width="20"
					height="20"
					rx="4"
					stroke="currentColor"
					stroke-width="2"></rect>
				<circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"
				></circle>
				<circle cx="18" cy="6" r="1" fill="currentColor"></circle>
			</svg>
			<span class="button-text">Contáctanos por Instagram</span>
		</div>
		<div class="pulse-ring"></div>
	</a>
</div>

<style>
	.floating-contact {
		position: fixed;
		bottom: 48px;
		right: 48px;
		z-index: 1000;
		pointer-events: none;
		transition: all 0.3s ease;
	}

	/* Heartbeat mode - bigger with glow and ping animation */
	.floating-contact.heartbeat-mode {
		transform: scale(1.15);
	}

	.floating-contact.heartbeat-mode .contact-button {
		box-shadow:
			0 12px 40px rgba(131, 58, 180, 0.6),
			0 8px 25px rgba(253, 29, 29, 0.4),
			0 4px 15px rgba(252, 176, 69, 0.3),
			0 0 0 1px rgba(255, 255, 255, 0.2);
		animation: heartbeat-ping 3s ease-in-out infinite;
	}

	.floating-contact.heartbeat-mode .pulse-ring {
		animation:
			heartbeat-glow 3s ease-in-out infinite,
			pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
	}

	@keyframes heartbeat-ping {
		0%,
		100% {
			transform: scale(1);
			box-shadow:
				0 12px 40px rgba(131, 58, 180, 0.6),
				0 8px 25px rgba(253, 29, 29, 0.4),
				0 4px 15px rgba(252, 176, 69, 0.3),
				0 0 0 1px rgba(255, 255, 255, 0.2);
		}

		/* First strong beat */
		10% {
			transform: scale(1.25);
			box-shadow:
				0 24px 70px rgba(131, 58, 180, 0.9),
				0 18px 45px rgba(253, 29, 29, 0.7),
				0 10px 30px rgba(252, 176, 69, 0.5),
				0 0 0 2px rgba(255, 255, 255, 0.4);
		}

		/* Recoil slightly */
		20% {
			transform: scale(0.9);
			box-shadow:
				0 10px 30px rgba(131, 58, 180, 0.5),
				0 6px 20px rgba(253, 29, 29, 0.3),
				0 4px 15px rgba(252, 176, 69, 0.2),
				0 0 0 1px rgba(255, 255, 255, 0.2);
		}

		/* Second lighter beat (like a real double-pulse heartbeat) */
		30% {
			transform: scale(1.15);
			box-shadow:
				0 18px 55px rgba(131, 58, 180, 0.8),
				0 12px 35px rgba(253, 29, 29, 0.6),
				0 6px 20px rgba(252, 176, 69, 0.4),
				0 0 0 1.5px rgba(255, 255, 255, 0.3);
		}

		40% {
			transform: scale(0.95);
		}
	}

	@keyframes heartbeat-glow {
		0%,
		70%,
		100% {
			border-color: rgba(131, 58, 180, 0.6);
			border-width: 2px;
		}
		10% {
			border-color: rgba(131, 58, 180, 1);
			border-width: 4px;
		}
		20% {
			border-color: rgba(131, 58, 180, 0.8);
			border-width: 3px;
		}
	}

	.contact-button {
		position: relative;
		display: flex;
		align-items: center;
		gap: 12px;
		background: linear-gradient(135deg, #833ab4 0%, #fd1d1d 50%, #fcb045 100%);
		color: white;
		padding: 16px 24px;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 600;
		font-size: 16px;
		box-shadow:
			0 8px 32px rgba(131, 58, 180, 0.4),
			0 4px 16px rgba(0, 0, 0, 0.3);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		pointer-events: auto;
		overflow: hidden;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.contact-button::before {
		content: "";
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent,
			rgba(255, 255, 255, 0.3),
			transparent
		);
		transition: left 0.6s ease;
	}

	.contact-button:hover::before {
		left: 100%;
	}

	.contact-button:hover {
		transform: translateY(-2px) scale(1.05);
		box-shadow:
			0 12px 40px rgba(131, 58, 180, 0.6),
			0 8px 24px rgba(253, 29, 29, 0.3);
		background: linear-gradient(135deg, #9146ff 0%, #ff1744 50%, #ffb74d 100%);
	}

	.contact-button:active {
		transform: translateY(0) scale(1.02);
	}

	.button-content {
		display: flex;
		align-items: center;
		gap: 12px;
		position: relative;
		z-index: 2;
	}

	.instagram-icon {
		flex-shrink: 0;
		transition: transform 0.3s ease;
	}

	.contact-button:hover .instagram-icon {
		transform: rotate(15deg) scale(1.1);
	}

	.button-text {
		white-space: nowrap;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.pulse-ring {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100%;
		height: 100%;
		border: 2px solid rgba(131, 58, 180, 0.6);
		border-radius: 50px;
		animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
		pointer-events: none;
	}

	@keyframes pulse {
		0% {
			transform: translate(-50%, -50%) scale(1);
			opacity: 1;
		}
		100% {
			transform: translate(-50%, -50%) scale(1.4);
			opacity: 0;
		}
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.floating-contact {
			bottom: 20px;
			right: 20px;
		}

		.contact-button {
			padding: 14px 20px;
			font-size: 15px;
		}

		.button-text {
			display: none;
		}

		.contact-button {
			width: 56px;
			height: 56px;
			padding: 0;
			justify-content: center;
			border-radius: 50%;
		}

		.button-content {
			gap: 0;
		}

		.instagram-icon {
			width: 28px;
			height: 28px;
		}
	}

	/* Ultra small screens */
	@media (max-width: 480px) {
		.floating-contact {
			bottom: 16px;
			right: 16px;
		}

		.contact-button {
			width: 52px;
			height: 52px;
		}

		.instagram-icon {
			width: 24px;
			height: 24px;
		}
	}

	/* Accessibility */
	@media (prefers-reduced-motion: reduce) {
		.contact-button {
			transition: none;
		}

		.pulse-ring {
			animation: none;
		}

		.contact-button:hover {
			transform: none;
		}

		.contact-button:hover .instagram-icon {
			transform: none;
		}
	}

	/* High contrast mode */
	@media (prefers-contrast: high) {
		.contact-button {
			border: 2px solid white;
			background: #833ab4;
		}
	}
</style>
